{
  "manifest_version": 3,
  "name": "Maya Page Helper",
  "short_name": "Maya Helper",
  "version": "1.0.1",
  "minimum_chrome_version": "88",
  "description": "AI-powered text assistant for summarizing, explaining, and creating quizzes from selected text on any webpage.",

  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }, 
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/marked.min.js", "floatingBubble.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": { "default_path": "sidebar.html" },
  "web_accessible_resources": [
    {
        "resources": ["sidebar.html", "sidebar.css", "icons/icon128.png"],
        "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  "author": "Maya Page Helper"

}